{
    "extends": [
        "./tsconfig"
    ],
    "compilerOptions": {
        "module": "es2020",
        "outDir": "dist",
        "paths": {
            "@nextspace/*": [
                "./src/*"
            ]
        },        
        "noEmit": false,
        "incremental": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "**/*.cy.ts",
        "**/*.cy.tsx",
    ]
}